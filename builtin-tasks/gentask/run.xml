<?xml version="1.0" encoding="UTF-8"?>
<project name="gentask" default="gentask">

  <!-- task properties -->
  <dirname property="task.basedir" file="${ant.file.gentask}" />
  <basename property="task.name" file="${task.basedir}" />

  <property file="${task.basedir}/default.properties" />

  <property  name="template.dir" location="${task.basedir}/template" />

  <target name="gentask">
    <mkdir dir="${ws.dir}/${out.task.name}" />
    <copy todir="${ws.dir}/${out.task.name}">
      <fileset dir="${template.dir}"/>
      <filterchain>
        <replacetokens begintoken="%%" endtoken="%%">
          <token key="TASK_NAME" value="${out.task.name}"/>
        </replacetokens>
      </filterchain>
    </copy>
  </target>

</project>
